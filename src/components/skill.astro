---
const { name, level, icon, delay, description } = Astro.props;

const width = `${level}%`;

const animations = ["fill", "fill-early-acceleration", "fill-late-acceleration", "fill-ease-in-out"];
const animation = animations[delay];
---

<div class='skill'>
  <div class='skill-header'>
    <div class='skill-icon'>{icon}</div>
    <div class='skill-name'>{name}</div>
  </div>
  <div class='skill-box'>
    <div class='skill-bar'>
      <div class='skill-fill'></div>
      <div class='text-box'>
        <p>
          {description}
        </p>
      </div>
    </div>
  </div>
</div>

<style define:vars={{ width, delay, animation }}>
  .skill {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-height: 45px;
    overflow: hidden;
  }

  .skill:hover,
  .skill:active,
  .skill:focus {
    max-height: fit-content;
  }

  .text-box {
    margin: 1rem;
    margin-left: 4rem;
    font-family: "Roboto", sans-serif;
    height: fit-content;
    color: burlywood;
  }

  .skill-header {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
  }

  .skill-icon {
    margin-right: 1rem;
  }

  .skill-name {
    color: darkorange;
    font-family: "Roboto", sans-serif;
    font-size: 1.1rem;
    padding: 0.3rem;
    padding-left: 0;
    margin-left: 1rem;
  }

  .skill-bar {
    width: 100%;
    margin-left: -2rem;
    height: 100%;
    background-color: black;
    overflow: hidden;
    color: lightgrey;
    border-bottom-right-radius: 15px;
  }

  .skill-box:hover {
    height: auto;
  }

  .skill-fill {
    height: 12px;
    background-color: slateblue;
    animation: var(--animation) 1.3s linear;
    width: var(--width);
  }

  @keyframes fillColor {
    0% {
      opacity: 0%;
    }
    100% {
      opacity: 100%;
    }
  }

  @keyframes fill {
    0% {
      width: 0%;
    }
    100% {
      width: var(--width);
    }
  }

  @keyframes fill-early-acceleration {
    0% {
      width: 0%;
    }
    25% {
      width: 60%;
    }
    100% {
      width: var(--width);
    }
  }

  @keyframes fill-late-acceleration {
    0% {
      width: 0%;
    }
    75% {
      width: 40%;
    }
    100% {
      width: var(--width);
    }
  }
  @keyframes fill-ease-in-out {
    0% {
      width: 0%;
    }
    50% {
      width: 80%;
    }
    100% {
      width: var(--width);
    }
  }
</style>
